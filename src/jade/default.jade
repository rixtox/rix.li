doctype html
html
  head
    //- Document Settings
    meta(http-equiv='Content-Type', content='text/html', charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    link(rel='shortcut icon', href='/assets/images/favicon.ico')
    script
      | blog_title = '{{@blog.title}}';
      | dq_id = 'rixli';
      | ga_id = 'UA-47839992-1';
      | ga_url = 'rix.li';
    //- Page Meta
    title {{{block "metaTitle"}}}
    meta(name='description', content='{{meta_description}}')
    meta(name='disqus_identifier', content!="{{{block 'disqus_identifier'}}}")
    //- Styles
    link(href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.0/normalize.min.css')
    link(rel='stylesheet', type='text/css', href!='{{asset "vendor/highlighter/prettify.css"}}')
    link(rel='stylesheet', type='text/css', href!='{{asset "vendor/nprogress/nprogress.css"}}')
    link(rel='stylesheet', type='text/css', href!='{{asset "css/style.css"}}')
    //- Responsive Meta Tags
    meta(name='HandheldFriendly', content='True')
    meta(name='MobileOptimized', content='320')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    | {{ghost_head}}
  body(class='{{body_class}}')
    | {{{customSiteHtml}}}
    | {{> header}}
    #ajax-container
      | {{{body}}}
    | {{> footer}}
    | {{ghost_foot}}
    //- Scripts
    script(src='//cdnjs.cloudflare.com/ajax/libs/mathjax/2.3/MathJax.js?config=TeX-AMS_HTML')
    script(src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js')
    script(src!='{{asset "vendor/history/jquery.history.js"}}')
    script(src!='{{asset "vendor/highlighter/prettify.js"}}')
    script(src!='{{asset "vendor/nprogress/nprogress.js"}}')
    script(src!='{{asset "js/script.js"}}')
    script
      //- Google Analytics
      | (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      | ga('create', ga_id, ga_url);
      | ga('send', 'pageview');
      //- Disqus
      | var disqus_shortname = dq_id;
      | (function() {
      | var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      | dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      | (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      | })();
